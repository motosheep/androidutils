<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_main_coor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoordinatorLayout--1--appbarlayout" />

        <Button
            android:id="@+id/activity_main_coor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoordinatorLayout--2--behavior--first" />

        <Button
            android:id="@+id/activity_main_coor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoordinatorLayout--2--collapsing" />

        <Button
            android:id="@+id/activity_main_novel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="novel--relative" />

        <Button
            android:id="@+id/activity_main_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="audio-focus" />

        <Button
            android:id="@+id/activity_main_recy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cus_xrecyclerview" />

        <Button
            android:id="@+id/activity_main_recy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="diy_xrecyclerview" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>